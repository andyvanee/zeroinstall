#!/usr/bin/env python
import sys, os
cwd = os.path.dirname(os.path.realpath(__file__))
sys.path.insert(0, os.path.join(cwd, 'mustache.zip'))
import pystache, yaml

usage="Usage:\n   %s data.yml temlate.mustache" % sys.argv[0]

try:
    data = yaml.load(open(sys.argv[1]).read())
    template = open(sys.argv[2]).read()
except IOError:
    exit(usage)

print pystache.render(template, data)
